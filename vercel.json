{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "OPENAI_API_KEY": {
      "description": "OpenAI API Key (from platform.openai.com)",
      "required": true
    },
    "PINECONE_API_KEY": {
      "description": "Pinecone API Key (from app.pinecone.io)",
      "required": true
    },
    "PINECONE_ENVIRONMENT": {
      "description": "Pinecone environment (e.g., us-east-1)",
      "value": "us-east-1",
      "required": true
    },
    "PINECONE_INDEX": {
      "description": "Pinecone index name",
      "value": "legal-dictionary",
      "required": true
    },
    "RATE_LIMIT_MAX": {
      "description": "Maximum translations per IP per day",
      "value": "10",
      "required": false
    }
  }
}